{
  "name": "shii",
  "version": "1.0.1",
  "description": "A minimalist and secure desktop client for Google Gemini API, designed for students with privacy and productivity focus",
  "main": "./main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "electron-builder --win dir && npm run create-zip",
    "build:win": "electron-builder --win dir && npm run create-zip",
    "build:win-zip": "electron-builder --win dir && npm run create-zip",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "dist:win": "npm run build:win",
    "dist:zip": "npm run build:win-zip",
    "create-zip": "powershell -Command \"Compress-Archive -Path 'dist/win-unpacked/*' -DestinationPath 'dist/Shii!-Portable-1.0.1.zip' -Force\"",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "electron",
    "ai",
    "privacy",
    "students",
    "gemini",
    "desktop",
    "stealth",
    "education",
    "javascript",
    "productivity"
  ],
  "author": "GabrielBaiano",
  "license": "ISC",
  "homepage": "https://github.com/GabrielBaiano/shii-study-assistant#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/GabrielBaiano/shii-study-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/GabrielBaiano/shii-study-assistant/issues"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "jsdom": "^25.0.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.2",
    "vitest": "^3.2.4"
  },
  "build": {
    "appId": "com.gabrielbaiano.stealthapp",
    "productName": "Shii!",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "src/banners",
        "to": "src/banners",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon-256.png",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "signExts": "",
      "artifactName": "Shii!-${version}-${arch}",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Shii!",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "artifactName": "Shii!-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "Shii!-Portable-${version}.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
